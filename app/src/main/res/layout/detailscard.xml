<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6abd78">
    <android.support.v7.widget.CardView
        android:layout_margin="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:textColor="@color/material_blue_500"
                android:textSize="18sp"
                android:text="会员卡"
                android:background="#e6dcdcdc"
                android:id="@+id/des_name"
                android:layout_width="match_parent"
                android:layout_height="48dp" />
            <ImageView
                android:layout_marginTop="16dp"
                android:scaleType="fitXY"
                android:id="@+id/des_one"
                android:layout_width="match_parent"
                android:layout_height="80dp" />
            <TextView
                android:id="@+id/des_content"
                android:textColor="#000000"
                android:layout_marginTop="8dp"
                android:textSize="20sp"
                android:text="6666666"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:id="@+id/des_two"
                android:layout_width="200dp"
                android:layout_height="200dp" />
        </LinearLayout>

   </android.support.v7.widget.CardView>
</LinearLayout>
